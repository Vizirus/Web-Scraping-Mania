<Window x:Class="Web_Scraping_Mania.Views.DownloadFormWeb"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Web_Scraping_Mania.Views"
        mc:Ignorable="d"
        Title="Викачати код за посиланням" Height="300" Width="300" ResizeMode="NoResize">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="59*"/>
            <ColumnDefinition Width="166*"/>
            <ColumnDefinition Width="75*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <TextBox Width="200" Height="30" VerticalAlignment="Bottom" HorizontalAlignment="Right" Margin="0,0,5,5" Text="{Binding Link}" Grid.ColumnSpan="2"/>
        <TextBlock Text="Посилання" FontSize="12" Height="30" VerticalAlignment="Bottom" HorizontalAlignment="Right" Margin="0,0,5,5" Grid.Column="2"/>
        <Button Content="Викачати" Width="100" Height="30" Grid.Row="1" VerticalAlignment="Center" HorizontalAlignment="Left" Margin="61,0,0,0" Command="{Binding DownloadCommand}" Grid.Column="1"/>
    </Grid>
</Window>
